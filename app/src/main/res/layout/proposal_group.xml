<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/mainapp_light">

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="24sp"
        android:textColor="#5e5e5e"
        android:background="@color/mainapp_light"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autoText="false"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/partButton" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/partButton"
        android:background="@drawable/abc_btn_rating_star_off_mtrl_alpha"
        android:layout_alignBottom="@+id/lblListHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textSize="20sp"
        android:id="@+id/Attendes"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lblListHeader"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignBottom="@+id/partButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>